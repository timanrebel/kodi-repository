<?xml version="1.0" encoding="UTF-8"?>
<addons>
 <addon id="repository.timanrebel" name="timanrebel's Add-ons" version="1.0.0" provider-name="timanrebel">
  <requires>
      <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="timanrebel's Add-ons">
      <info compressed="false">https://github.com/timanrebel/kodi-repository/raw/master/addons.xml</info>
      <checksum>https://github.com/timanrebel/kodi-repository/raw/master/addons.xml.md5</checksum>
      <datadir zip="true">https://github.com/timanrebel/kodi-repository/raw/master/</datadir>
      <hashes>false</hashes>
  </extension>
  <extension point="xbmc.addon.metadata">
      <summary>Install timanrebel's Add-ons</summary>
      <description>Download and install addons by timanrebel</description>
      <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.script.ibuscommunicator" name="IBusCommunicator" version="1.3.6" provider-name="harryberlin">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
    <import_off addon="script.module.pyserial" version="3.4" />
  </requires>
  <extension point="xbmc.python.script" library="default.py" />
  <extension point="xbmc.service" start="login" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>linux windx</platform>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <summary lang="en">IBus Communication for BMW</summary>
    <description lang="en">Addon for controlling Raspberry Pi with original BMW (E46, E39, E53,...) with Professional Navigation System. Radio BM24, BM54 and 16:9 Bordscreen.</description>
    <forum>http://www.bmwraspcontrol.de/board/showthread.php?tid=295</forum>
    <email>debug.ibuscommunicator@gmx.de</email>
    <source>not released at the moment</source>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
      <screenshot></screenshot>
    </assets>
  </extension>
</addon>

<addon id="script.reliableresume" name="Reliable Resume" version="1.0.2" provider-name="devkid/stanley87/harryberlin">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point="xbmc.python.script" library="default.py"></extension>
  <extension point="xbmc.service" library="observer.py" start="login"></extension>
  <extension point="xbmc.service" library="default.py" start="login"></extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Resumes the last played media.</summary>
    <description lang="en">Resumes the last played media reliably by saving the current media position persisently every couple of seconds (configurable). Therefore it also works when the system gets turned off by power loss. Based von ResumeX by stanley87.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
